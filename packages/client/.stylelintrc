{
    "configBasedir": ".",
    "defaultSeverity": "warning",
    "extends": "stylelint-config-standard-scss",
    "plugins": ["stylelint-high-performance-animation"],
    "rules": {
        "indentation": 4,
        "string-quotes": "single",
        "plugin/no-low-performance-animation-properties": null
    },
    "ignoreFiles": [
        "node_modules",
        "**/*.html",
        "**/*.ts"
    ]
}
