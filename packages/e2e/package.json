{
    "name": "@kaetram/e2e",
    "type": "module",
    "scripts": {
        "test": "NODE_ENV=e2e server-test 'yarn workspace kaetram dev' 'http-get://localhost:9000|9001' 'yarn tsx database/server' '3000/api/v1/health'",
        "test:run": "yarn test 'yarn cypress run'",
        "test:open": "yarn test 'yarn cypress open'"
    },
    "devDependencies": {
        "@badeball/cypress-cucumber-preprocessor": "latest",
        "@bahmutov/cypress-esbuild-preprocessor": "latest",
        "@kaetram/common": "workspace:*",
        "@types/node": "^17.0.23",
        "concurrently": "^7.2.2",
        "cypress": "latest",
        "express-mongo-rest": "^0.1.3",
        "start-server-and-test": "^1.14.0",
        "tsx": "^3.7.1",
        "typescript": "^4.6.3",
        "typescript-object-builder": "^0.3.0"
    },
    "cypress-cucumber-preprocessor": {
        "stepDefinitions": [
            "[filepath]/**/*.{js,ts}",
            "[filepath]/../*.{js,ts}",
            "cypress/e2e/extensions/*/common/**/*.{js,ts}",
            "cypress/e2e/common/**/*.{js,ts}"
        ]
    }
}
