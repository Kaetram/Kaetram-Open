{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "target": "esnext",
        "types": ["node"],
        "outDir": "./dist",
        "importHelpers": true,
        "incremental": true,
        "removeComments": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,

        "noImplicitAny": false,
        "strictNullChecks": false,

        "sourceMap": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true
    },
    "typedocOptions ": {
        "inputFiles": ["./"],
        "mode": "modules",
        "out": "../docs",
        "entryPoint": "./ts/main",
        "theme": "default",
        "name": "Kaetram",
        "hideGenerator": true
    },
    "includes": ["ts/**/*.ts", "data/**/*.json"],
    "exclude": ["node_modules/"]
}
