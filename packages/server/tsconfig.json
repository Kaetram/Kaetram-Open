{
    "compilerOptions": {
        "strict": true,
        "allowJs": false,
        "module": "commonjs",
        "target": "esnext",

        "types": ["node"],
        "rootDir": "./",
        "outDir": "./dist",
        "importHelpers": true,
        "incremental": true,
        "allowUmdGlobalAccess": true,
        "moduleResolution": "node",
        "removeComments": true,
        "preserveConstEnums": true,

        "noImplicitAny": false,
        "strictNullChecks": false,

        "sourceMap": false,
        "resolveJsonModule": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": false,
        "typeRoots": ["./ts/util/globals.d.ts"]
    },
    "typedocOptions ": {
        "inputFiles": ["./"],
        "mode": "modules",
        "out": "../docs",
        "entryPoint": "./ts/main",
        "theme": "default",
        "name": "Kaetram",
        "hideGenerator": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules/**", "../client/**"]
}
