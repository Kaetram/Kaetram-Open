{
    "compilerOptions": {
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "removeComments": true,
        "allowJs": true,
        "inlineSourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "composite": true,
        "rootDir": "./",
        "baseUrl": "./packages",
        "paths": {
            "@kaetram/*": ["./*"]
        }
    },
    "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
