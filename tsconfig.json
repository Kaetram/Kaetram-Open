{
    "compilerOptions": {
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": false,
        "removeComments": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,

        /** These values should be set to true once refactoring codebase. */
        "noImplicitAny": false,
        "strictNullChecks": false,

        "rootDir": ".",
        "baseUrl": "./packages",
        "paths": {
            "@kaetram/*": ["*"]
        }
    }
}
